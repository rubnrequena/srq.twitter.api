{
  "compilerOptions": {                
    "target": "es5",                         
    "module": "commonjs",                    
    "lib": ["dom","es2018"],                          
    "allowJs": true,
    "outDir": "build",                       
    "rootDir": "src",
    "strict": true,                          
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,               
    "skipLibCheck": true,                    
    "forceConsistentCasingInFileNames": true 
  }
}
